#ifndef FIFO_h
#define FIFO_h

void Write_Server_INFO(int  PID,int CHID){

	 FILE * fp;
	   /* open the file for writing*/
	   fp = fopen ("/tmp/myServer.info","w");
	   fprintf(fp,"\n", PID);
	   fprintf(fp,"\n", CHID);
	   fclose (fp);
}

void Read_Server_INFO(void){

	int server_values[2]={0};
	int buff[2] = {0};
	FILE * fp = fopen("/tmp/myServer.info", "r");
	  if(fp == 0) {
	    perror("fopen");
	    exit(1);
	}

	  while (fread(buff, sizeof(int), 2, fp) > 0){
	    for (int i = 0; i < 1; i++){
	    	printf("debug\n");
	    	server_values[i] = buff[i];
	    	printf("%i",server_values[i]);
	    }

	  }
	  fclose(fp);
}

#endif
